@model IEnumerable<CourseProjectItems.Models.Ticket>

@{
    ViewBag.Title = "My Tickets";
}

<h2>My Tickets</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        <p>@ViewBag.Message</p>
    </div>
}
else
{
    <div class="table-responsive mt-4">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Status</th>
                    <th scope="col">Created</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.Title</td>
                        <td>@ticket.Status</td>
                        <td>@ticket.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a class="nav-link btn btn-info btn-sm text-white" asp-controller="Tickets" asp-action="Details" asp-route-id="@ticket.Id">
                                <i class="fas fa-info-circle"></i> View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


<style>
    .table {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
    }

        .table thead th {
            background-color: #343a40;
            color: white;
            border: none;
        }

        .table th,
        .table td {
            vertical-align: middle;
            text-align: center;
        }

    .btn-info {
        color: white;
    }

        .btn-info:hover {
            background-color: #117a8b;
            border-color: #117a8b;
        }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
