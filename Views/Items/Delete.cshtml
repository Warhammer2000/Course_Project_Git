@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model CourseProjectItems.ViewModels.ItemViewModel

@{
	ViewData["Title"] = Localizer["Delete"];
}

<h1>@Localizer["Delete"] <i class="fas fa-trash-alt"></i></h1>

<h4>@Localizer["Item"] <i class="fas fa-box"></i></h4>
<hr />
<div>
	<h4>@Localizer["Are you sure you want to delete this?"] <i class="fas fa-exclamation-triangle"></i></h4>
	<dl class="row">
		<dt class="col-sm-2">
			<i class="fas fa-align-left"></i> @Localizer["Name"]
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class="col-sm-2">
			<i class="fas fa-align-left"></i> @Localizer["CollectionId"]
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CollectionId)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
		<a asp-action="Index" class="btn btn-secondary">@Localizer["Back to List"] <i class="fas fa-arrow-left"></i></a>
	</form>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}