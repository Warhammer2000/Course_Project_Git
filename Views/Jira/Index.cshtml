    .container {
        max-width: 800px;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: 0;
    }

    .form-control {
        border-radius: 10px;
    }

    .form-group label {
        margin-bottom: 10px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-lg {
        padding: 10px 20px;
        font-size: 1.25rem;
    }
</style>
