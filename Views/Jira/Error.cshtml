@{
    ViewBag.Title = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center bg-danger text-white">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-x-circle-fill"></i> Error Creating Ticket
                    </h2>
                </div>
                <div class="card-body text-center">
                    <p class="lead mt-3">There was an error creating your ticket. Please try again later.</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Go to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


<style>
    .container {
        max-width: 800px;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        background-color: #dc3545; 
        border-bottom: 0;
        font-size: 1.5rem;
    }

    .card-title i {
        margin-right: 10px; 
    }

    .lead {
        font-size: 1.25rem; 
        color: #721c24; 
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .mt-3 {
        margin-top: 1rem; 
    }
</style>
