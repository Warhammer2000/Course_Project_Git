@model IEnumerable<CourseProjectItems.ViewModels.UserViewModel>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h1>@Localizer["Manage Users"] <i class="fas fa-users-cog"></i></h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-circle"></i> @TempData["WarningMessage"]
    </div>
}

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                <button type="button" class="btn btn-link p-0" data-toggle="popover" data-content="@Localizer["The user's username"]">
                    @Localizer["UserName"] <i class="fas fa-user"></i>
                </button>
            </th>
            <th>
                <button type="button" class="btn btn-link p-0" data-toggle="popover" data-content="@Localizer["The user's email address"]">
                    @Localizer["Email"] <i class="fas fa-envelope"></i>
                </button>
            </th>
            <th>
                <button type="button" class="btn btn-link p-0" data-toggle="popover" data-content="@Localizer["This function prevents the user from logging in at all"]">
                    @Localizer["Locked Out"] <i class="fas fa-lock"></i>
                </button>
            </th>
            <th>
                <button type="button" class="btn btn-link p-0" data-toggle="popover" data-content="@Localizer["This function restricts the user from creating, editing, and deleting collections and items, as well as deleting comments"]">
                    @Localizer["Blocked"] <i class="fas fa-ban"></i>
                </button>
            </th>
            <th>
                <button type="button" class="btn btn-link p-0" data-toggle="popover" data-content="@Localizer["This function allows the user to create, edit, and delete all collections and items, as well as delete, block, and assign other administrators"]">
                    @Localizer["Admin"] <i class="fas fa-user-shield"></i>
                </button>
            </th>
            <th>
                <button type="button" class="btn btn-link p-0" data-toggle="popover" data-content="@Localizer["Available actions for this user"]">
                    @Localizer["Actions"] <i class="fas fa-cogs"></i>
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.IsLockedOut</td>
                <td>@(user.IsBlocked)</td>
                <td>@(user.IsAdmin)</td>
                <td>
                    <div class="d-flex flex-wrap">
                        <form asp-action="LockUser" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-warning btn-sm m-1" @(user.IsLockedOut ? "disabled" : "")>
                                <i class="fas fa-lock"></i> @Localizer["Lock"]
                            </button>
                        </form>
                        <form asp-action="UnlockUser" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-success btn-sm m-1" @(!user.IsLockedOut ? "disabled" : "")>
                                <i class="fas fa-unlock"></i> @Localizer["Unlock"]
                            </button>
                        </form>
                        <form asp-action="BlockUser" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-warning btn-sm m-1" @(user.IsBlocked ? "disabled" : "")>
                                <i class="fas fa-ban"></i> @Localizer["Block"]
                            </button>
                        </form>
                        <form asp-action="UnblockUser" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-success btn-sm m-1" @(!user.IsBlocked ? "disabled" : "")>
                                <i class="fas fa-check"></i> @Localizer["Unblock"]
                            </button>
                        </form>
                        <button type="button" class="btn btn-danger btn-sm m-1" data-bs-toggle="modal" data-bs-target="#deleteUserModal-@user.Id">
                            <i class="fas fa-trash-alt"></i> @Localizer["Delete"]
                        </button>
                        <div class="modal fade" id="deleteUserModal-@user.Id" tabindex="-1" aria-labelledby="deleteUserModalLabel-@user.Id" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteUserModalLabel-@user.Id">@Localizer["Delete User"]</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>@Localizer["Are you sure you want to delete this user?"]</p>
                                        <p>@Localizer["Delete collections and items created by this user?"]</p>
                                        <form asp-action="DeleteUser" method="post" id="deleteUserForm-@user.Id">
                                            <input type="hidden" name="userId" value="@user.Id" />
                                            <input type="hidden" name="deleteCollectionsAndItems" id="deleteCollectionsAndItemsHidden-@user.Id" value="false" />
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="deleteCollectionsAndItemsCheckbox-@user.Id">
                                                <label class="form-check-label" for="deleteCollectionsAndItemsCheckbox-@user.Id">
                                                    @Localizer["Yes, delete collections and items"]
                                                </label>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                                                <button type="submit" class="btn btn-danger" onclick="setDeleteCollectionsAndItemsValue('@user.Id')">@Localizer["Delete"]</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (user.IsAdmin)
                        {
                            <form asp-action="RemoveAdmin" method="post" style="display:inline;">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-secondary btn-sm m-1">
                                    <i class="fas fa-user-minus"></i> @Localizer["Remove Admin"]
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="AddAdmin" method="post" style="display:inline;">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-primary btn-sm m-1">
                                    <i class="fas fa-user-plus"></i> @Localizer["Add Admin"]
                                </button>
                            </form>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table th, .table td {
        vertical-align: middle;
    }

    .btn-sm {
        margin-right: 5px;
    }

    .alert {
        margin-top: 20px;
    }

    .table td i {
        margin-left: 5px;
    }

    .popover {
        max-width: 300px;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="popover"]').popover({
                trigger: 'hover',
                placement: 'top',
                html: true
            });
        });
    </script>
    <script>
        function setDeleteCollectionsAndItemsValue(userId) {
            var checkbox = document.getElementById('deleteCollectionsAndItemsCheckbox-' + userId);
            var hiddenField = document.getElementById('deleteCollectionsAndItemsHidden-' + userId);
            if (checkbox.checked) {
                hiddenField.value = "true";
            } else {
                hiddenField.value = "false";
            }
        }
    </script>
}
